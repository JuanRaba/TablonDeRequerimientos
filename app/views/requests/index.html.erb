<h1>Requests#index</h1>

<a href="#addExpense" data-toggle="collapse" aria-expanded="true" class="dropdown-toggle">    
  <div class="title">
    <h2>Add new request</h2>
  </div>
</a>
<ul class="collapse list-unstyled" id="addExpense">
  <%= render 'form', request: @request %>
</ul>

<table id="table1" cellspacing="0" class="table mytable filterable">
  <thead>
    <tr>
      <th><%= sortable "title", "Request title" %></th>
      <th><%= sortable "score", "Score"%></th>
      <th><%= sortable "popularity", "Popularity"%></th>
      <th><%= "#comments"%></th>
      <th colspan="2">
    </tr>
  </thead>

  <tbody>
    <% @requests2.each do |request| %>
      <tr>
        <td><%= link_to request.title, request %></td>
        <td><%= request.score %></td>
        <td><%= request.popularity %></td>
        <td><%= request.comments.count %></td>
        <td><%= link_to 'Voteup', request_voteup_url(request) %></td>
        <td><%= link_to 'Votedown', request_votedown_url(request) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


