<h1 class="title">Requests#index</h1>

<a href="#addExpense" data-toggle="collapse" aria-expanded="true" class="dropdown-toggle">    
  <div>
    <h2>Add new request</h2>
  </div>
</a>
<ul class="collapse list-unstyled" id="addExpense">
  <%= render 'form', request: @request %>
</ul>

<table class="table">
  <!-- nice looking Ordering table -->
  <thead>
    <tr>
      <th>Order by:</th>
      <th><%= sortable "title", "Request title" %></th>
      <th><%= sortable "score", "Score"%></th>
      <th><%= sortable "popularity", "Popularity"%></th>
    </tr>
  </thead>

</table>

<div class="container-fluid total">
  <div class="row justify-content-center">
    <% @requests2.each do |request| %>
      <div class="col-xs-12 col-md-10"><!-- if u want 2 requests cols change here-->
        <div class="card">
          <div class="card-body">   
            <div class="row">
              <div class="score-container">

                <div class="vote" id="voteup">
                  <%= link_to '+', request_voteup_url(request) %>    
                </div>

                <div class="vote" id="votedown">
                  <%= link_to '-', request_votedown_url(request) %>
                </div>
                
                <h3>
                  <%= request.score %> / <%= request.popularity %>
                </h3>
              </div>
          
              <h2>
                 <%= link_to request.title, request %>
              </h2>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
